

<div class="row mt-4">
    <div class="col-12">
        <h2 class="mb-4">My Expense History</h2>
        <p class="text-muted">Review the status of all your submitted expense claims (Approved, Pending, or Rejected).</p>
        
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <% if (expenses.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th>#</th>
                                    <th>Date</th>
                                    <th>Category</th>
                                    <th>Amount Claimed</th>
                                    <th>Status</th>
                                    <th>Submitted On</th>
                                    <th>Details</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% expenses.forEach((expense, index) => { %>
                                    <tr>
                                        <td><%= index + 1 %></td>
                                        <td><%= formatDate(expense.date) %></td>
                                        <td><%= expense.category %></td>
                                        <td><%= expense.currency %> <%= expense.amount.toFixed(2) %></td>
                                        <td>
                                            <% 
                                                let statusClass = 'badge bg-secondary';
                                                if (expense.status === 'Approved') statusClass = 'badge bg-success';
                                                else if (expense.status === 'Rejected') statusClass = 'badge bg-danger';
                                                else if (expense.status === 'Pending') statusClass = 'badge bg-warning text-dark';
                                            %>
                                            <span class="<%= statusClass %>"><%= expense.status %></span>
                                        </td>
                                        <td><%= formatDate(expense.createdAt) %></td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-info disabled" title="View Approval History">View</button>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="alert alert-info m-3" role="alert">
                        You have not submitted any expense claims yet.
                    </div>
                <% } %>
            </div>
        </div>

    </div>
</div>