<%- include('../partials/messages') %>

<style>
    .claim-card {
        border-left: 5px solid #ffc107; /* Warning color for Pending */
        transition: box-shadow 0.3s ease;
    }
    .claim-card:hover {
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }
    .approval-form-container {
        border-top: 1px dashed #ccc;
        padding-top: 1rem;
    }
</style>

<div class="row mt-4">
    <div class="col-12">
        <h2 class="mb-3 text-warning">Pending Expense Approvals</h2>
        <p class="text-muted">Review claims submitted by <%= user.role === 'Manager' ? 'your assigned employees' : 'users across the company' %> [cite: 34, 44].</p>
        <hr>

        <% if (expenses && expenses.length > 0) { %>
            <% expenses.forEach(function(expense) { %>
                <div class="card claim-card mb-4 shadow-sm">
                    <div class="card-header bg-light d-flex justify-content-between align-items-center">
                        <span class="text-dark fw-bold">Claim ID: <%= expense._id.toString().substring(18).toUpperCase() %></span>
                        <span class="badge bg-warning text-dark"><i class="fas fa-hourglass-half me-1"></i> PENDING STEP <%= expense.currentApprovalStep %></span>
                    </div>
                    
                    <div class="card-body">
                        <div class="row">
                            <!-- Claim Details -->
                            <div class="col-md-6 border-end">
                                <h5 class="text-primary"><%= expense.currency %> <%= expense.amount.toFixed(2) %></h5>
                                <small class="text-muted">Submitted on: <%= formatDate(expense.date) %> | Category: <%= expense.category %></small>
                                <p class="mt-2 mb-1"><strong>Description:</strong></p>
                                <p class="text-break"><%= expense.description %></p>
                            </div>

                            <!-- Submitter Details -->
                            <div class="col-md-6">
                                <h6 class="text-secondary">Submitted By:</h6>
                                <p class="mb-1 fw-bold"><%= expense.employee.username %></p>
                                <small class="text-muted"><%= expense.employee.email %></small>
                                
                                <div class="mt-3 approval-form-container">
                                    <h6 class="text-dark">Take Action:</h6>
                                    
                                    <form action="/expenses/action/<%= expense._id %>" method="POST" class="mt-2">
                                        <!-- Approval/Rejection Action -->
                                        <div class="mb-3">
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="action" id="approve_<%= expense._id %>" value="approve" required>
                                                <label class="form-check-label text-success fw-bold" for="approve_<%= expense._id %>">Approve</label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="action" id="reject_<%= expense._id %>" value="reject" required>
                                                <label class="form-check-label text-danger fw-bold" for="reject_<%= expense._id %>">Reject</label>
                                            </div>
                                        </div>

                                        <!-- Comments -->
                                        <div class="mb-3">
                                            <label for="comments_<%= expense._id %>" class="form-label small text-muted">Comments (Optional)</label>
                                            <textarea class="form-control" id="comments_<%= expense._id %>" name="comments" rows="2" placeholder="Reason for approval or rejection..."></textarea>
                                        </div>

                                        <button type="submit" class="btn btn-sm btn-primary w-100">Submit Decision</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="alert alert-info text-center mt-5 p-4">
                <i class="fas fa-check-circle me-2"></i> Congratulations! There are currently no expenses awaiting your approval.
            </div>
        <% } %>
    </div>
</div>